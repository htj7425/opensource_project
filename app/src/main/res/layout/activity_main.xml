<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:onClick="Alarm_stop"
    android:orientation="vertical"
    android:visibility="visible"
    tools:context=".MainActivity">

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_centerInParent="true"
        android:background="#000000"/>
    <TextView
        android:id="@+id/recommand_time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="5"
        android:gravity="center"
        android:text="추천 시간 : "
        android:textSize="24sp" />
    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_centerInParent="true"
        android:background="#000000"/>
    <TextView
        android:id="@+id/set_alarm_time"
        android:layout_width="match_parent"
        android:layout_height="242dp"
        android:layout_weight="5"
        android:clickable="false"
        android:gravity="center"
        android:text="_ _ : _ _"
        android:textColor="#000000"
        android:textSize="60sp" />

    <ImageView
        android:id="@+id/time_delete_btn"
        android:layout_width="100dp"
        android:layout_height="37dp"
        android:layout_gravity="center"
        android:layout_weight="5"
        android:onClick="alarm_delete"
        android:visibility="visible"
        app:srcCompat="@android:drawable/presence_offline" />
    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_centerInParent="true"
        android:background="#000000"/>
    <FrameLayout
        android:id="@+id/ltp_time"
        android:layout_width="match_parent"
        android:layout_height="220dp"
        android:layout_weight="5"
        android:background="?android:attr/selectableItemBackground">

        <net.steamcrafted.materialiconlib.MaterialIconView
            android:layout_width="129dp"
            android:layout_height="180dp"
            android:layout_gravity="center"
            android:layout_margin="48dp"
            android:scaleType="center"
            app:materialIcon="clock"
            app:materialIconColor="#5000" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:gravity="center"
            android:padding="16dp"
            android:text="알람 추가"
            android:textColor="#5000"
            android:textSize="24sp" />

    </FrameLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_centerInParent="true"
        android:background="#000000"/>
    <TextView
        android:id="@+id/stop_alarm"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="5"
        android:gravity="center|center_horizontal|center_vertical"
        android:text="알람 종료"
        android:textSize="34sp" />

</LinearLayout>